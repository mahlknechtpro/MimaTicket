<Window x:Class="MimaTicket.NewTicket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MimaTicket"
        mc:Ignorable="d"
        Title="Create new ticket" Height="300" Width="500">
    <Grid Margin="0,0,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label  Height="30" FontWeight="ExtraBold" Width="120" Content="Worker" Margin="70,25,300,180"></Label>
        <ComboBox Height="30" Width="120" Margin="205,26,165,181" />

        <Label  Height="30" FontWeight="ExtraBold" Width="120" Content="Ticket-Nr" Margin="70,80,300,127"></Label>
        <TextBox Height="30" Width="120" Margin="205,80,165,127" />


        <Button Grid.Column="0" Grid.Row="1" Width="60" Height="20" Margin="410,5,20,5" Content="Cancel" Click="Button_Click"></Button>
        <Button Grid.Column="0" Grid.Row="1" Width="60" Height="20" Margin="340,5,80,5" Content="Save"></Button>
    </Grid>
</Window>
